<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manutenção de Salas de Aula</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Salas de Aula Cadastradas</h2>
        <table class="table table-striped mt-4">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Localização</th>
                    <th>Capacidade</th>
                </tr>
            </thead>
            <tbody>
                {% if salas.length > 0 %}
                    {% for sala in salas %}
                        <tr>
                            <td>{{ sala.salasdeaulaid }}</td>
                            <td>{{ sala.descricao }}</td>
                            <td>{{ sala.localizacao }}</td>
                            <td>{{ sala.capacidade }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Nenhuma sala de aula encontrada.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
        <div class="mt-3">
            <!-- Botão para voltar à página inicial do servidor EJS -->
            <a href="http://localhost:25000" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
